<div class="container">
  <div class="boards">
    <div class="card">
      <div class="card-body">
        <h2 class='card-title d-flex justify-content-between mb-4'>
          <span>Your cards</span>
          <%= link_to 'New Card', new_card_path, class: 'btn btn-primary' %>
        </h2>
    
        <% @cards.each do |card| %>
          <%= link_to card, class: 'text-decoration-none' do %>
            <div class="card card-card mb-3">
              <div class="card-body">
                <div class="mb-3">
                  <span class="badge badge">
                    <%= card.category %>
                    <%= card.currency %>
                  </span>
                </div>
                <h5 class='card-title text-dark'><b><%= card.title %></b></h5>
                <p class='text-secondary'><%= card.description %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>