<div class="container my-5">
  <div class="card bg-light shadow p-3 mb-5 rounded fs-5">
    <div class="row">
      <div class="col">
        <h2 class="text-center">
          <%= @item.title%>
        </h2>
      </div>
    </div>
    <div class="row my-1">
      <div class="col-sm-2">
        Amout
      </div>
      <div class="col-sm-10">
        <%= @item.price || '---' %>
      </div>
    </div>
    <div class="row my-1">
      <div class="col-sm-2">
        Category
      </div>
      <div class="col-sm-10">
        <%= @item.category %>
      </div>
    </div>
    <div class="row my-1">
      <div class="col-sm-2">
        Create date
      </div>
      <div class="col-sm-10">
        <div class="text-center">
         <%= @item.created_at %>
        </div>
      </div>
    </div>
    <div class="border-bottom pb-2">
      <%= link_to "Back", @root_path, class: "btn btn-outline-light" %>
      <%= link_to "Edit", edit_card_item_path(@card), class: "btn btn-outline-warning mx-2" %>
      <%= link_to "Remove", card_item_path(@card), method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure?" } %>
    </div>
  </div>
</div>