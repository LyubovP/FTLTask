<h1>Items Search</h1>

<%= form_for search_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "Go", name: nil %>
  </p>
<% end %>
<ul>
  <% @items.each do |item| %>
    <li>
      <h3>
        <%= link_to item.title, controller: "cards", action: "show", id: item._id%>
      </h3>
    </li>
  <% end %>
</ul>
